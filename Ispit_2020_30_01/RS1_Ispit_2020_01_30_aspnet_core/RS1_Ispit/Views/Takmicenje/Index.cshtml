@using RS1_Ispit_asp.net_core.ViewModels
@model SkolaIndexVM
@{
    ViewData["Title"] = "Index";
}

<h2>Prikaz skola</h2>
    <form class="form-group" asp-action="TakmicenjeIndex">
        <div class="form-group">
            <label>Skola</label>
            <select asp-for="@Model.SkolaID" asp-items="@Model.Skole" class="form-control"></select>
        </div>
        <div class="form-group">
            <label>Razred</label>
            <select asp-for="@Model.RazredID" asp-items="@Model.Razredi" class="form-control"></select>
        </div>
        <input type="submit" value="Odaberi" class="btn btn-primary">
    </form>
