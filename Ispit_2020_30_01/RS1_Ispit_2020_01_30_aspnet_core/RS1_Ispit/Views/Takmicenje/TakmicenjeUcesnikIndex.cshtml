@using RS1_Ispit_asp.net_core.ViewModels
@model TakmicenjeUcesnikIndexVM
@{
    ViewData["Title"] = "TakmicenjeUcesnikIndex";
}

<table class="table">
    <thead>
        <tr>
            <th>Odjeljenje</th>
            <th>Broj u dnevniku</th>
            <th>Pristupio</th>
            <th>Rezultat - bodovi</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.Odjeljenje</td>
                <td>@x.BrojUDnevniku</td>
                <td>
                    <a asp-controller="Takmicenje" asp-action="Pristupio"
                       asp-route-TakmicenjeUcesnikID="@x.TakmicenjeUcesnikID"
                       ajax-poziv="da" ajax-rezultat="ajaxDiv">@x.Pristupio</a>
                </td>
                <td>
                    <input type="text" name="" data-recordid="@x.TakmicenjeUcesnikID" value="@x.Rezultat" class="ajaxOcjena">
                </td>
                @if (x.Pristupio == "DA")
                {
                    <td>
                        <a asp-controller="Takmicenje" asp-action="TakmicenjeUcesnikUpdate"
                           asp-route-TakmicenjeUcesnikID="@x.TakmicenjeUcesnikID"
                           ajax-poziv="da" ajax-rezultat="ajaxDiv" class="btn btn-primary">Uredi</a>
                    </td>
                }
                else
                {
                    <td> </td>
                }
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function (parameters) {
        $(".ajaxOcjena").change(function () {
            var id = $(this).attr('data-recordid');
            var rezultat = $(this).val();
            var urlpoziv = '/Takmicenje/TakmicenjeUcesnikSave?TakmicenjeUcesnikID=' + id + "&Rezultat" + rezultat;

            $.ajax({
                type="POST",
                url: urlpoziv,
                success: function (result) {
                    $(".ajaxOcjena").html(result);
                }
            });
        });
    });
</script>



