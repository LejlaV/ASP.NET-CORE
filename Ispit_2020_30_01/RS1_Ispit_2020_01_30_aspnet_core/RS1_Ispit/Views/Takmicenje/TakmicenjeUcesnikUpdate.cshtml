@using RS1_Ispit_asp.net_core.ViewModels
@model TakmicenjeUcesnikUpdateVM
@{
    ViewData["Title"] = "TakmicenjeUcesnikUpdate";
}

<form class="form-group" asp-controller="Takmicenje" asp-action="TakmicenjeUcesnikSave" 
      ajax-poziv="da" ajax-rezultat="ajaxDiv" method="post">
    <input asp-for="@Model.TakmicenjeUcesnikID" hidden>

    <div class="form-group">
        <label>Ucesnici</label>
        <select asp-for="@Model.UcesnikID" asp-items="@Model.Ucesnici" class="form-control"></select>
    </div>
   
    <div class="form-group">
        <label>Bodovi</label>
        <input type="text" asp-for="@Model.Bodovi" class="form-control">
    </div>
    <input type="submit" value="Sacuvaj" class="btn btn-success">
</form>

