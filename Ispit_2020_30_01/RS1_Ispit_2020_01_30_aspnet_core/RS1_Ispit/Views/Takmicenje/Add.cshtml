@using RS1_Ispit_asp.net_core.ViewModels
@model TakmicenjeAddVM
@{
    ViewData["Title"] = "Add";
}

<h2>Dodavanje takmicenja</h2>
<form class="form-group" asp-controller="Takmicenje" asp-action="Save" method="post">
    <input asp-for="@Model.SkolaID" hidden>
    <input asp-for="@Model.TakmicenjeID" hidden>

    <div class="form-group">
        <label>Skola domacin</label>
        <input asp-for="@Model.Skola" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label>Predmet</label>
        <select asp-for="@Model.PredmetID" asp-items="@Model.Predmeti" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Razred</label>
        <select asp-for="@Model.RazredID" asp-items="@Model.Razredi" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input asp-for="@Model.Datum" class="form-control" readonly>
    </div>
    <input type="submit" value="Dodaj" class="btn btn-success">
</form>

