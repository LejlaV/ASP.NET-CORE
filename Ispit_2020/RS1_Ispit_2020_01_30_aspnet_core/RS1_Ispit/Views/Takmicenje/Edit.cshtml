@using RS1_Ispit_asp.net_core.ViewModels
@model TakmicenjeUcesnikEditVM
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit bodova za ucesnika</h2>
<form class="form-group" asp-controller="Takmicenje" asp-action="SaveEdit" 
      ajax-poziv="da" ajax-rezultat="ajaxDiv" method="post">

    <input asp-for="@Model.TakmicenjeUcesnikID" hidden />

    <div class="form-group">
        <label>Ucesnik</label>
        <input asp-for="@Model.Ucesnik" class="form-control" readonly />
    </div>
    
    <div class="form-group">
        <label>Bodovi</label>
        <input type="text" asp-for="@Model.Bodovi" class="form-control" />
    </div>
    <input type="submit" value="Sacuvaj" class="btn btn-success" />
</form>


