@using RS1_Ispit_asp.net_core.ViewModels
@model TakmicenjeUcesnikAddVM
@{
    ViewData["Title"] = "UcesnikAdd";
}

    <form class="form-group" asp-controller="Takmicenje" asp-action="UcesnikSave" 
           ajax-poziv="da" ajax-rezultat="ajaxDiv" method="post">

        <input asp-for="@Model.TakmicenjeID" hidden />
        <input asp-for="@Model.TakmicenjeUcesnikID" hidden />

        <div class="form-group">
            <label>Ucesnik</label>
            <select asp-for="@Model.UcesnikID" asp-items="@Model.Ucesnik" class="form-control"></select>
        </div>
        
        <div class="form-group">
            <label>Bodovi</label>
            <input type="text" asp-for="@Model.Bodovi" class="form-control" />
        </div>
        <input type="submit" value="Dodaj" class="btn btn-success" />
    </form>

