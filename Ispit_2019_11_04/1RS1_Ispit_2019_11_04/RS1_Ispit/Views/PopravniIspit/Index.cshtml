@using RS1_Ispit_asp.net_core.ViewModels
@model PredmetIndexVM
@{
    ViewData["Title"] = "Index";
}
<h2>Predmeti</h2>
<table class="table">
    <thead>
        <tr>
            <th>Razred</th>
            <th>Predmet</th>
            <th>Akcija</th>
        </tr>
        </thead>
    <tbody>
        @foreach (var x in Model.Rows)
		{
        <tr>
            <td>@x.Razred</td>
            <td>@x.NazivPredmeta</td>
            <td>
                <a asp-controller="PopravniIspit" asp-action="PopravniIspitIndex" 
                   asp-route-PredmetID="@x.PredmetID" class="btn btn-primary">Odaberi</a>
            </td>
        </tr>
		}
        </tbody>
    </table>
