@using RS1_Ispit_asp.net_core.ViewModels
@model PopravniIspitDetaljiVM

@{
    ViewData["Title"] = "Detalji";
}


<h2>Detalji popravnog ispita</h2>
<form class="form-group">
    
    <div class="form-group">
        <label>Predmet</label>
        <input asp-for="@Model.Predmet" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label>Razred</label>
        <input asp-for="@Model.Razred" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label>Datum</label>
        <input asp-for="@Model.Datum" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label>Skola</label>
        <input asp-for="@Model.Skola" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label>Skolaska godina</label>
        <input asp-for="@Model.SkolskaGodina" class="form-control" readonly>
    </div>

</form>

<div id="ajaxDiv" style="border: 1px solid black">
    </div>
<script>
	$.get("/PopravniIspitStavke/Index?PopravniIspitID=@Model.PopravniIspitID",
		function (result, status) {
			$("#ajaxDiv").html(result);
		});
</script>