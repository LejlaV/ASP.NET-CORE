@using Ispit_2017_09_11_DotnetCore.ViewModels
@model OdjeljenjeStavkeEditVM
@{
    ViewData["Title"] = "OdjeljenjeStavkeEdit";
}


<h2>Uređivanje podataka za stavke odjeljenja</h2>
<form class="form-group" asp-controller="Odjeljenje" asp-action="OdjeljenjeStavkeSaveEdit"
      ajax-poziv="da" ajax-rezultat="ajaxDiv" method="post">

    <input asp-for="@Model.OdjeljenjeStavkeID" hidden>

    <div class="form-group">
        <label>Ucenik</label>
        <input type="text" asp-for="@Model.Ucenik" class="form-control" readonly>
    </div>
 
    <div class="form-group">
        <label>Broj u dnevniku</label>
        <input type="text" asp-for="@Model.BrojUDnevniku" class="form-control">
    </div>
    <input type="submit" value="Sacuvaj" class="btn btn-success">
</form>
