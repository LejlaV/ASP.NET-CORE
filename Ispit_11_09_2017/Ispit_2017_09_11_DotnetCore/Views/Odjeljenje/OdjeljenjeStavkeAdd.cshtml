@using Ispit_2017_09_11_DotnetCore.ViewModels
@model OdjeljenjeStavkeAddVM
@{
    ViewData["Title"] = "OdjeljenjeStavkeAdd";
}

<h2>Dodaj ucenika u odjeljenje</h2>
<form class="form-group" asp-controller="Odjeljenje" asp-action="OdjeljenjeStavkeSave"
      ajax-poziv="da" ajax-rezultat="ajaxDiv" method="post">
    <input asp-for="@Model.OdjeljenjeID" hidden>
    <input asp-for="@Model.OdjeljenjeStavkeID" hidden>

    <div class="form-group">
        <label>Ucenik</label>
        <select asp-for="@Model.UcenikID" asp-items="@Model.Ucenik" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Broj u dnevniku</label>
        <input type="text" asp-for="@Model.BrojUDnevniku" class="form-control">
    </div>
    <input type="submit" value="Dodaj" class="btn btn-success">
</form>

