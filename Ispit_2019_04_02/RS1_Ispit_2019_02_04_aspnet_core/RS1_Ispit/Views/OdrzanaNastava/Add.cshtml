@using RS1_Ispit_asp.net_core.ViewModels
@model OdrzaniCasAddVM
@{
    ViewData["Title"] = "Add";
}

<h2>Dodavanje novog casa</h2>
<form asp-controller="OdrzanaNastava" asp-action="Save" method="post" class="form-group">
    <input asp-for="@Model.OdrzaniCasID" hidden>
    <input asp-for="@Model.NastavnikID" hidden>

    <div class="form-group">
        <label>Nastavnik</label>
        <input asp-for="@Model.ImePrezime" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input asp-for="@Model.Datum" class="form-control">
    </div>
    <div class="form-group">
        <label>Skola/Odjeljenje/Predmet</label>
        <select asp-for="@Model.PredajePredmetID" asp-items="@Model.PredajePredmet" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Sadrzaj casa</label>
        <input asp-for="@Model.Sadrzaj" class="form-control">
    </div>
    <input type="submit" value="Sacuvaj" class="btn  btn-success">
</form>

