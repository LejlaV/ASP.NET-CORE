@using RS1_Ispit_asp.net_core.ViewModels;
@model OdrzaniCasIndexVM
@{
    ViewData["Title"] = "OdrzaniCasIndex";
}

<h2>Prikaz odrzanih casova za nastavnika @Model.ImePrezime</h2>
<table class="table">
    <thead>
        <tr>
            <th>Datum odrzanog casa</th>
            <th>Skola</th>
            <th>Skolska godina / Odjeljenje</th>
            <th>Predmet</th>
            <th>Odsutni ucenici</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.Datum</td>
                <td>@x.Skola</td>
                <td>@x.SkolskaGodinaOdjeljenje</td>
                <td>@x.Predmet</td>
                <td>@x.OdsutniUcenici</td>
                <td>
                    <a asp-controller="OdrzanaNastava" asp-action="Detalji" asp-route-OdrzaniCasID="@x.OdrzaniCasID"
                       class="btn btn-primary">Detalji</a>

                    <a asp-controller="OdrzanaNastava" asp-action="Obrisi" asp-route-OdrzaniCasID="@x.OdrzaniCasID"
                       class="btn btn-danger">Obrisi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="OdrzanaNastava" asp-action="Add" asp-route-NastavnikID="@Model.NastavnikID"
   class="btn btn-success">Dodaj</a>