@using RS1_Ispit_asp.net_core.ViewModels
@model OdrzaniCasEditVM
@{
    ViewData["Title"] = "Edit";
}

<h2>Editovanje casa</h2>
<form class="form-group" asp-controller="OdrzanaNastava" asp-action="SaveEdit" method="post">
    <input asp-for="@Model.OdrzaniCasID" hidden />

    <div class="form-group">
        <label>Datum</label>
        <input asp-for="@Model.Datum" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Odjeljenje / Predmet</label>
        <input type="text" asp-for="@Model.OdjeljenjePredmet" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label>Sadrzaj casa</label>
        <input type="text" asp-for="@Model.Sadrzaj" class="form-control" />
    </div>
    <input type="submit" value="Sacuvaj" class="btn btn-success" />
</form>

<div id="ajaxDiv"></div>
<script>
	$.get("/OdrzanaNastava/OdrzaniCasDetaljiIndex?OdrzaniCasID=@Model.OdrzaniCasID",
		function (result, status) {
			$("#ajaxDiv").html(result);
		});
</script>