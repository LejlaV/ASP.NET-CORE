@using RS1_Ispit_asp.net_core.ViewModels
@model PopravniIspitDetaljiVM
@{
    ViewData["Title"] = "Detalji";
}

<h2>Detalji popravnog ispita</h2>
<form class="form-group" asp-controller="PopravniIspit" asp-action="Save" method="post">
    <input asp-for="@Model.PopravniIspitID" hidden />
    <div class="form-group">
        <label>Datum</label>
        <input type="text" asp-for="@Model.Datum" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label>Predmet</label>
        <input type="text" asp-for="@Model.Predmet" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label>Skola</label>
        <input type="text" asp-for="@Model.Skola" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Skolska godina</label>
        <input type="text" asp-for="@Model.SkolskaGodina" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Odjeljenje</label>
        <input type="text" asp-for="@Model.Oznaka" class="form-control" readonly />
    </div>
</form>
<div id="ajaxDiv" style="border: 1px solid black"></div>
<script>
	$.get("/PopravniIspit/PopravniIspitStavkeIndex?PopravniIspitID=@Model.PopravniIspitID",
		function (result, status) {
			$("#ajaxDiv").html(result);
		});
</script>