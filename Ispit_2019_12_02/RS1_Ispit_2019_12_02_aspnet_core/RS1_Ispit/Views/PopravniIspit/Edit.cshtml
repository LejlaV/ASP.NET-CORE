@using RS1_Ispit_asp.net_core.ViewModels
@model PopravniIspitStavkeEditVM
@{
    ViewData["Title"] = "Edit";
}

<h2>Uredjivanje popravnog ispita</h2>
<form class="form-group" asp-controller="PopravniIspit" asp-action="SaveEdit" 
      ajax-poziv="da" ajax-rezultat="ajaxDiv" method="post">
    <input asp-for="@Model.PopravniIspitStavkeID" hidden />
    
    <div class="form-group">
        <label>Ucenik</label>
        <input type="text" asp-for="@Model.Ucenik" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bodovi</label>
        <input type="text" asp-for="@Model.Bodovi" class="form-control" />
    </div>
  
    <input type="submit" value="Sacuvaj" class="btn btn-success" />
</form>


