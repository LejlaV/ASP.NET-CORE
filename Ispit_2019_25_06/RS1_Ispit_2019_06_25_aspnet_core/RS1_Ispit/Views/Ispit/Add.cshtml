@using RS1_Ispit_asp.net_core.ViewModels
@model IspitAddVM
@{
    ViewData["Title"] = "Add";
}

<h2>Dodavanje novog ispita</h2>
<form class="form-group" asp-controller="Ispit" asp-action="Save" method="post">
    <input asp-for="@Model.AngazovanID" hidden />
    <input asp-for="@Model.IspitID" hidden />
    <div class="form-group">
        <label>Predmet</label>
        <input asp-for="@Model.Predmet" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Nastavnik</label>
        <input asp-for="@Model.Nastavnik" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Akademska godina</label>
        <input asp-for="@Model.AkademskaGodina" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input type="text" asp-for="@Model.Datum" class="form-control" />
    </div>
    <div class="form-group">
        <label>Napomena</label>
        <input type="text" asp-for="@Model.Napomena" class="form-control" />
    </div>
    <input type="submit" value="Dodaj" class="btn btn-success"/>
</form>

