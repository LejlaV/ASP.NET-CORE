@using RS1_Ispit_asp.net_core.ViewModels
@model IspitDetaljiVM
@{
    ViewData["Title"] = "Detalji";
}

<h2>Detalji ispita</h2>
<form class="form-group" >
    <input asp-for="@Model.IspitID" hidden />
    <div class="form-group">
        <label>Predmet</label>
        <input asp-for="@Model.Predmet" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Nastavnik</label>
        <input asp-for="@Model.Nastavnik" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Akademska godina</label>
        <input asp-for="@Model.AkademskaGodina" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input type="text" asp-for="@Model.Datum" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Napomena</label>
        <input type="text" asp-for="@Model.Napomena" class="form-control" readonly/>
    </div>
</form>
<div id="ajaxDiv"></div>
<script>
	$.get("/Ispit/IspitDetaljiIndex?IspitID=@Model.IspitID",
		function (result, status) {
			$("#ajaxDiv").html(result);
		});
</script>


