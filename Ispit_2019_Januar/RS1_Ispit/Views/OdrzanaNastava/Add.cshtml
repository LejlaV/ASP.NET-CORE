@using RS1_Ispit_asp.net_core.ViewModels
@model MaturskiIspitAddVM
@{
    ViewData["Title"] = "Add";
}

<h2>Dodavanje maturskog ispita</h2>
<form class="form-group" asp-controller="OdrzanaNastava" asp-action="Save" method="post">

    <input asp-for="@Model.MaturskiIspitID" hidden />
    <input asp-for="@Model.NastavnikID" hidden />

    <div class="form-group">
        <label>Skola</label>
        <select asp-for="@Model.SkolaID" asp-items="@Model.Skola" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Nastavnik</label>
        <input asp-for="@Model.NastavnikImePrezime" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Skolska godina</label>
        <input asp-for="@Model.SkolskaGodina" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input type="text" asp-for="@Model.Datum" class="form-control" />
    </div>
    <div class="form-group">
        <label>Predmet</label>
        <select asp-for="@Model.PredmetID" asp-items="@Model.Predmet" class="form-control"></select>
    </div>

    <input type="submit" value="Dodaj" class="btn btn-success"/>
</form>

