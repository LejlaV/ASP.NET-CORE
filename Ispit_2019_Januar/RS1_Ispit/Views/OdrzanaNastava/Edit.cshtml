@using RS1_Ispit_asp.net_core.ViewModels
@model MaturskiIspitEditVM
@{
    ViewData["Title"] = "Edit";
}

<h2>Uređivanje maturskog ispita</h2>
<form class="form-group" asp-controller="OdrzanaNastava" asp-action="SaveEdit" method="post">

    <input asp-for="@Model.MaturskiIspitID" hidden />


    <div class="form-group">
        <label>Datum</label>
        <input asp-for="@Model.Datum" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Predmet</label>
        <input asp-for="@Model.Predmet" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Napomena</label>
        <input type="text" asp-for="@Model.Napomena" class="form-control" />
    </div>

    <input type="submit" value="Sacuvaj" class="btn btn-success" />

</form>

<div id="ajaxDiv"></div>
<script>
	$.get("/OdrzanaNastava/MaturskiIspitStavkeIndex?MaturskiIspitID=@Model.MaturskiIspitID",
		function (result, status) {
			$("#ajaxDiv").html(result);
		});
</script>

