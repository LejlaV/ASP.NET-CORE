@using RS1_Ispit_asp.net_core.ViewModels
@model IndexVM
@{
    ViewData["Title"] = "Index";
}

<h2>Prikaz</h2>
<form class="form-group" asp-controller="PopravniIspit" asp-action="PopravniIspitIndex" method="post">
    <div class="form-group">
        <label>Skolska godina</label>
        <select asp-for="@Model.SkolskaGodinaID" asp-items="@Model.SkolskaGodina" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Skola</label>
        <select asp-for="@Model.SkolaID" asp-items="@Model.Skola" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Predmet</label>
        <select asp-for="@Model.PredmetID" asp-items="@Model.Predmet" class="form-control"></select>
    </div>
    <input type="submit" value="Odaberi" class="btn btn-primary" />
</form>

