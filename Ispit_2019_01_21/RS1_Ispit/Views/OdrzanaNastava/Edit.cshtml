@using RS1_Ispit_asp.net_core.ViewModels;
@model MaturskiIspitEditVM
@{
    ViewData["Title"] = "Edit";
}

<h2>Uredjivanje maturskog ispita</h2>
<form asp-controller="OdrzanaNastava" asp-action="SaveEdit" method="post" class="form-group">

    <input asp-for="@Model.MaturskiIspitID" hidden>
    <input asp-for="@Model.NastavnikID" hidden>

    <div class="form-group">
        <label>Datum</label>
        <input type="text" asp-for="@Model.Datum" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label>Predmet</label>
        <input type="text" asp-for="@Model.Predmet" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label>Napomena</label>
        <input type="text" asp-for="@Model.Napomena" class="form-control">
    </div>

    <input type="submit" value="Sacuvaj" class="btn btn-primary">
</form>
<div id="ajaxDiv">

</div>

<script>
    $.get("/MaturskiIspitStavke/Index?MaturskiIspitID=@Model.MaturskiIspitID",
        function (rezultat, status) {
            $("#ajaxDiv").html(rezultat);

        });
</script>
